<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taraxippus.vocab" >
	
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
		
    <application
		android:hardwareAccelerated="true" 
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
		
		<receiver 
			android:name=".util.NotificationHelper" >
			
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED"/>
			</intent-filter>
		</receiver>
		
		<receiver 
			android:name=".util.AddQueueReceiver" 
			android:enabled="true"
			android:exported="true" >

			<intent-filter>
				<action android:name="com.taraxippus.vocab.action.ACTION_QUEUE"/>
			</intent-filter>
		</receiver>
		
        <activity
            android:name=".ActivityMain"
            android:label="Vocab"
			android:windowSoftInputMode="adjustResize" >
			
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
			
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
			android:name=".ActivitySettings" 
			android:label="Settings"
			android:parentActivityName=".ActivityMain"
			android:windowSoftInputMode="adjustResize" >

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ActivityMain" />

			<intent-filer>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.PREFERENCE" />
				<category android:name="android.intent.category.NOTIFICATION_PREFERENCES" />
			</intent-filer>

		</activity>
		<activity
			android:name=".ActivityQuiz" 
			android:label="Quiz"
			android:screenOrientation="portrait" 
			android:parentActivityName=".ActivityMain"
			android:windowSoftInputMode="adjustResize" >

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ActivityMain" />

		</activity>
		<activity
			android:name=".ActivityLearn" 
			android:label="Learn Vocabularies"
			android:theme="@style/DialogTheme"
			android:parentActivityName=".MainActivity"
			android:windowSoftInputMode="adjustResize" >

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ActivityMain" />

		</activity>
		<activity
			android:name=".ActivityAdd" 
			android:label="Add Vocabulary"
			android:theme="@style/DialogTheme"
			android:parentActivityName=".ActivityMain"
			android:windowSoftInputMode="adjustResize" >

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ActivityMain" />
			
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<data android:mimeType="text/*" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
			android:name=".ActivityAddKanji" 
			android:label="Add Kanji"
			android:theme="@style/DialogTheme"
			android:parentActivityName=".ActivityMain"
			android:windowSoftInputMode="adjustResize" >

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ActivityMain" />

		</activity>
		<activity
			android:name=".ActivityDetail" 
			android:label="Detail"
			android:parentActivityName=".ActivityMain"
			android:windowSoftInputMode="adjustResize" >

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ActivityMain" />

		</activity>
		<activity
			android:name=".ActivityDetailKanji" 
			android:label="Kanji Detail"
			android:parentActivityName=".ActivityMain"
			android:windowSoftInputMode="adjustResize" >

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ActivityMain" />

		</activity>
		<activity
			android:name=".ActivityStats" 
			android:label="Statistics"
			android:parentActivityName=".ActivityMain"
			android:windowSoftInputMode="adjustResize" >

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ActivityMain" />

		</activity>
    </application>
</manifest>
