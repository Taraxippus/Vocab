<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/category_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Category"
		android:textSize="16dp"
		android:visible="false"
		android:paddingLeft="16dp"
		android:paddingTop="16dp"
		android:paddingBottom="8dp"
		android:textColor="@color/accent"
		android:textStyle="bold"
		android:visibility="gone"
		/>
	
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_vocabulary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		card_view:cardCornerRadius="2dp"
		card_view:cardElevation="2dp"
		card_view:cardUseCompatPadding="true"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground"
		android:padding="0dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/kanji_text"
				android:layout_gravity="center"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:paddingLeft="12dp"
				android:paddingRight="12dp"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:text="Kanji"
				android:textSize="50dp"
				android:textStyle="bold"
				android:gravity="center"/>

			<TextView
				android:id="@+id/reading_text"
				android:layout_gravity="center"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true"
				android:layout_below="@id/kanji_text"
				android:paddingLeft="12dp"
				android:paddingRight="12dp"
				android:paddingBottom="8dp"
				android:text="Reading"
				android:textSize="20dp"
				android:gravity="center"/>
			
			<TextView
				android:id="@+id/meaning_text"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@id/overflow_button"
				android:layout_toRightOf="@id/kanji_text"
				android:text="Meaning"
				android:textSize="20dp"
				android:gravity="center"/>

			<ImageView
				android:id="@+id/check"
				android:layout_gravity="left|top"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:padding="0dp"
				android:scaleType="center"
				android:src="@drawable/check"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:clickable="true"
			/>
			
			<ImageButton
				android:id="@+id/overflow_button"
				android:layout_gravity="right|top"
				android:layout_width="34dp"
				android:layout_height="40dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:padding="0dp"
				android:scaleType="center"
				android:src="@drawable/overflow"
				android:onClick="showVocabularyPopup"
				android:background="?attr/selectableItemBackgroundBorderless"
			/>
		
		</RelativeLayout>

	</android.support.v7.widget.CardView>
	
</LinearLayout>
