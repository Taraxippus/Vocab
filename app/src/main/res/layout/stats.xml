<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/card_stats"
	android:layout_gravity="top"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	card_view:cardCornerRadius="4dp"
	card_view:cardElevation="4dp"
	card_view:cardUseCompatPadding="true"
	android:clickable="true"
	android:foreground="?attr/selectableItemBackground"
	android:padding="8dp">


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/results_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="8dp">
	
		<TextView
			android:id="@+id/results_text"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0 results"
			android:gravity="center"
			android:padding="8dp"
			android:textStyle="bold"
		/>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal">

			<Button
				android:id="@+id/jisho_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Search on jisho.org"
				android:textColor="#FFC107"
				style="?android:attr/borderlessButtonStyle"
				android:layout_gravity="center"
			/>

			<FrameLayout
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_weight="2"/>

			<Button
				android:id="@+id/filter_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Change filters"
				android:textColor="#FFC107"
				style="?android:attr/borderlessButtonStyle"
				android:layout_gravity="center"
			/>

		</LinearLayout>
	
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/stats_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="8dp">

		<TextView
			android:layout_gravity="left|top"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Stats"
			android:gravity="left|top"
			android:padding="8dp"
			android:textStyle="bold"
		/>
	
		<TextView
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Vocabulary learned:"
			android:gravity="left"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"/>
	
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal">

			<ProgressBar
				android:id="@+id/learned_progress"
				style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:progress="50"
				android:max="100"
				android:layout_gravity="center"
				android:layout_weight="3"
			/>

			<TextView
				android:id="@+id/learned_progress_number"
				android:layout_gravity="right|center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="50 / 100"
				android:gravity="right|center"
				android:padding="8dp"
				android:layout_weight="2"/>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?android:attr/listDivider"/>
		
		<TextView
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Total success rate:"
			android:gravity="left"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"/>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal">

			<ProgressBar
				android:id="@+id/total_progress"
				style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:progress="50"
				android:max="100"
				android:layout_gravity="center"
				android:layout_weight="3"
			/>

			<TextView
				android:id="@+id/total_progress_number"
				android:layout_gravity="right|center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="50 / 100"
				android:gravity="right|center"
				android:padding="8dp"
				android:layout_weight="2"/>

		</LinearLayout>
		
		<TextView
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Success rate for entering kanji:"
			android:gravity="left"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"/>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ProgressBar
				android:id="@+id/kanji_progress"
				style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:progress="50"
				android:max="100"
				android:layout_gravity="center"
				android:layout_weight="3"
			/>

			<TextView
				android:id="@+id/kanji_progress_number"
				android:layout_gravity="right|center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="50 / 100"
				android:gravity="right|center"
				android:padding="8dp"
				android:layout_weight="2"/>

		</LinearLayout>

		<TextView
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Success rate for entering reading:"
			android:gravity="left"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"/>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal">

			<ProgressBar
				android:id="@+id/reading_progress"
				style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:progress="50"
				android:max="100"
				android:layout_gravity="center"
				android:layout_weight="3"
			/>

			<TextView
				android:id="@+id/reading_progress_number"
				android:layout_gravity="right|center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="50 / 100"
				android:gravity="right|center"
				android:padding="8dp"
				android:layout_weight="2"/>

		</LinearLayout>

		<TextView
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Success rate for entering meaning:"
			android:gravity="left"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"/>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal">

			<ProgressBar
				android:id="@+id/meaning_progress"
				style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:progress="50"
				android:max="100"
				android:layout_gravity="center"
				android:layout_weight="3"
			/>

			<TextView
				android:id="@+id/meaning_progress_number"
				android:layout_gravity="right|center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="50 / 100"
				android:gravity="right|center"
				android:padding="8dp"
				android:layout_weight="2"/>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?android:attr/listDivider"/>
		
		<TextView
			android:id="@+id/next_review_now"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Vocabularies to review now:"
			android:gravity="left"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"/>
		
		<TextView
			android:id="@+id/next_review_hour"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Vocabularies to review in the next hour:"
			android:gravity="left"
			android:paddingLeft="8dp"/>
		
		<TextView
			android:id="@+id/next_review_day"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Vocabularies to review in the next day:"
			android:gravity="left"
			android:paddingLeft="8dp"
			android:paddingBottom="8dp"/>
		
		<TextView
			android:id="@+id/next_review"
			android:layout_gravity="right|bottom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Next Review: Never"
			android:gravity="right|bottom"
			android:padding="8dp"/>

	</LinearLayout>

</android.support.v7.widget.CardView>
