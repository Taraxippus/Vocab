<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextView
		android:id="@+id/text_import"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" 
		android:layout_alignParentTop="true" 
		android:layout_marginTop="16dp"
		android:paddingLeft="24dp"
		android:text="Conflicts:" />

	<Spinner
		android:id="@+id/spinner_import"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true" 
		android:layout_marginTop="16dp"
		android:paddingLeft="24dp" />
	
	<TextView
		android:id="@+id/text_type"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" 
		android:layout_below="@id/spinner_import" 
		android:layout_marginTop="16dp"
		android:paddingLeft="24dp"
		android:text="Vocabulary Type:" />

	<Spinner
		android:id="@+id/spinner_type"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true" 
		android:layout_alignLeft="@id/spinner_import"
		android:layout_below="@id/spinner_import" 
		android:layout_marginTop="16dp"
		android:paddingLeft="24dp" />
	
	<CheckBox android:id="@+id/checkbox_learned"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" 
		android:layout_below="@id/spinner_type" 
		android:layout_marginTop="16dp"
		android:layout_marginLeft="24dp"
		android:text="Add to learned vocabularies"/>
	
</RelativeLayout>
