<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
	
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:scrollbars="vertical"
	android:animateLayoutChanges="true">
    
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_kanji"
		android:layout_gravity="top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="4dp"
		card_view:cardElevation="4dp"
		card_view:cardUseCompatPadding="true"
		android:padding="8dp">
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:padding="8dp">

			<TextView
				android:id="@+id/kanji_text"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Kanji"
				android:textSize="75dp"
				android:textStyle="bold"
				android:gravity="center"/>

			<TextView
				android:id="@+id/reading_text"
				android:layout_gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Reading"
				android:textSize="20dp"
				android:textStyle="bold"
				android:gravity="center"/>
			
			<FrameLayout
				android:layout_width="fill_parent"
				android:layout_height="15dp"/>

			<TextView
				android:id="@+id/meaning_text"
				android:layout_gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Meaning"
				android:textSize="20dp"
				android:gravity="center"/>
			
			<TextView
				android:id="@+id/type"
				android:layout_gravity="right|bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:gravity="right|bottom"
				android:paddingTop="8dp"
				android:paddingRight="8dp"/>
				
		</LinearLayout>
		
		<LinearLayout
			android:layout_gravity="left|bottom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="5dp">

			<ImageButton
				android:id="@+id/stroke_order"
				android:layout_gravity="left|bottom"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:scaleType="center"
				android:src="@drawable/stroke_order"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:clickable="true"
			/>

			<ImageButton
				android:id="@+id/sound"
				android:layout_gravity="left|bottom"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:scaleType="center"
				android:src="@drawable/sound"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:visibility="gone"
			/>
			
		</LinearLayout>
		
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_stroke_order"
		android:layout_gravity="top|center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="4dp"
		card_view:cardElevation="4dp"
		card_view:cardUseCompatPadding="true"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground"
		android:padding="8dp"
		android:visibility="gone">

		<ImageButton
			android:id="@+id/button_overflow"
			android:layout_gravity="right|top"
			android:layout_width="34dp"
			android:layout_height="40dp"
			android:padding="0dp"
			android:scaleType="center"
			android:src="@drawable/overflow"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:onClick="showStrokeOrderPopup"
		/>
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="8dp">

			<TextView
				android:layout_gravity="left|top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Strokeorder"
				android:gravity="left|top"
				android:padding="8dp"
				android:paddingLeft="16dp"
				android:textStyle="bold"
			/>

			<LinearLayout
				android:id="@+id/layout_stroke_order"
				android:layout_width="fill_parent"
				android:layout_height="100dp"
				android:orientation="horizontal"
				android:gravity="center">

				<ProgressBar
					android:id="@+id/stroke_order_progress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
				/>
				
			</LinearLayout>

		</LinearLayout>
	
	</android.support.v7.widget.CardView>
		
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_notes"
		android:layout_gravity="top|center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="4dp"
		card_view:cardElevation="4dp"
		card_view:cardUseCompatPadding="true"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground"
		android:padding="8dp">
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:animateLayoutChanges="true">

			<TextView
				android:layout_gravity="left|top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Notes"
				android:gravity="left|top"
				android:padding="16dp"
				android:textStyle="bold"
			/>
		
			<TextView
				android:id="@+id/notes_text"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:paddingTop="0dp"
				android:paddingBottom="16dp" />
		
			<ProgressBar
				android:id="@+id/notes_image_progress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:visibility="gone"
				android:padding="8dp"
			/>
			
			<ImageView
				android:id="@+id/notes_image"
				android:layout_gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:visibility="gone"
				/>
			
		</LinearLayout>
		
	</android.support.v7.widget.CardView>
	
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_same_reading"
		android:layout_gravity="top|center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="0dp"
		card_view:cardElevation="2dp"
		card_view:cardUseCompatPadding="false">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp" >

			<TextView
				android:layout_gravity="left|top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Same reading"
				android:gravity="left|top"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:paddingLeft="20dp"
				android:textStyle="bold"
			/>
			
			<android.support.v7.widget.RecyclerView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/same_reading_recycler_view"
				android:layout_width="fill_parent"
				android:layout_height="100dp" 
				android:foreground="?attr/selectableItemBackground"/>
			
		</LinearLayout>

	</android.support.v7.widget.CardView>
	
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_same_meaning"
		android:layout_gravity="top|center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="2dp"
		card_view:cardElevation="2dp"
		card_view:cardUseCompatPadding="false" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp" >

			<TextView
				android:layout_gravity="left|top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Same meaning"
				android:gravity="left|top"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:paddingLeft="20dp"
				android:textStyle="bold"
			/>

			<android.support.v7.widget.RecyclerView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/same_meaning_recycler_view"
				android:layout_width="fill_parent"
				android:layout_height="100dp"
				android:foreground="?attr/selectableItemBackground"/>

		</LinearLayout>

	</android.support.v7.widget.CardView>
	
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_stats"
		android:layout_gravity="top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="4dp"
		card_view:cardElevation="4dp"
		card_view:cardUseCompatPadding="true"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground"
		android:padding="8dp">
	
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="8dp">
			
			<TextView
				android:layout_gravity="left|top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Stats"
				android:gravity="left|top"
				android:padding="8dp"
				android:textStyle="bold"
				/>
			
			<TextView
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Success rate for entering kanji:"
				android:gravity="left"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"/>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				
				<ProgressBar
					android:id="@+id/kanji_progress"
					style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:progress="50"
					android:max="100"
					android:layout_gravity="center"
					android:layout_weight="3"
				/>
			
				<TextView
					android:id="@+id/kanji_progress_number"
					android:layout_gravity="right|center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="50 / 100"
					android:gravity="right|center"
					android:padding="8dp"
					android:layout_weight="2"/>
				
			</LinearLayout>
		
			<LinearLayout
				android:id="@+id/layout_reading"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical">
				
				<TextView
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Success rate for entering reading:"
					android:gravity="left"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"/>

				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="horizontal">

					<ProgressBar
						android:id="@+id/reading_progress"
						style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
						android:layout_width="200dp"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:progress="50"
						android:max="100"
						android:layout_gravity="center"
						android:layout_weight="3"
					/>

					<TextView
						android:id="@+id/reading_progress_number"
						android:layout_gravity="right|center"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="50 / 100"
						android:gravity="right|center"
						android:padding="8dp"
						android:layout_weight="2"/>

				</LinearLayout>
			
			</LinearLayout>
			
			<TextView
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Success rate for entering meaning:"
				android:gravity="left"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"/>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:paddingBottom="8dp">

				<ProgressBar
					android:id="@+id/meaning_progress"
					style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:progress="50"
					android:max="100"
					android:layout_gravity="center"
					android:layout_weight="3"
				/>

				<TextView
					android:id="@+id/meaning_progress_number"
					android:layout_gravity="right|center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="50 / 100"
					android:gravity="right|center"
					android:padding="8dp"
					android:layout_weight="2"/>

			</LinearLayout>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="?android:attr/listDivider"/>
			
			<TextView
				android:id="@+id/kanji_streak"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Kanji streak: 0"
				android:gravity="left"
				android:paddingTop="8dp"/>
			
			<TextView
				android:id="@+id/reading_streak"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Reading streak: 0"
				android:gravity="left"/>
			
			<TextView
				android:id="@+id/meaning_streak"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Meaning streak: 0"
				android:gravity="left"
				android:paddingBottom="8dp"/>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="?android:attr/listDivider"/>
			
			<LinearLayout
				android:id="@+id/reading_meaning_usage"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="gone">
				
				<TextView
					android:id="@+id/text_reading_entered"
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Reading entered:"
					android:gravity="left"
					android:visibility="gone"
					android:paddingTop="8dp"
					android:paddingBottom="8dp"/>

				<com.taraxippus.vocab.view.PercentageGraphView
					android:id="@+id/percentage_graph_reading"
					android:layout_width="fill_parent"
					android:layout_height="150dp"
					android:visibility="gone"
				/>
			
				<TextView
					android:id="@+id/text_meaning_entered"
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Meaning entered:"
					android:gravity="left"
					android:visibility="gone"
					android:paddingTop="8dp"
					android:paddingBottom="8dp"/>

				<com.taraxippus.vocab.view.PercentageGraphView
					android:id="@+id/percentage_graph_meaning"
					android:layout_width="fill_parent"
					android:layout_height="150dp"
					android:visibility="gone"
				/>
			
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="?android:attr/listDivider"/>
			
			</LinearLayout>
			
			<TextView
				android:id="@+id/category"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Category: 0"
				android:gravity="left"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"/>
			
			<com.taraxippus.vocab.view.LineGraphView
				android:id="@+id/line_graph_category"
				android:layout_width="fill_parent"
				android:layout_height="125dp"
			/>
			
			<TextView
				android:id="@+id/next_review"
				android:layout_gravity="right|bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Next Review: Now"
				android:gravity="right|bottom"
				android:paddingTop="8dp"
				android:paddingRight="8dp"/>
			
			<TextView
				android:id="@+id/last_checked"
				android:layout_gravity="right|bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Last Checked: Never"
				android:gravity="right|bottom"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"/>
			
			<TextView
				android:id="@+id/added"
				android:layout_gravity="right|bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Added: Never"
				android:gravity="right|bottom"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"/>
			
		</LinearLayout>
		
	</android.support.v7.widget.CardView>
	
</LinearLayout>
</ScrollView>
