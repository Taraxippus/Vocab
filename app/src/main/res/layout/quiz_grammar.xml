<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:scrollbars="vertical">

		<android.support.v7.widget.CardView
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			android:id="@+id/card_start_quiz"
			android:layout_gravity="top"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			card_view:cardCornerRadius="4dp"
			card_view:cardElevation="4dp"
			card_view:cardUseCompatPadding="true"
			android:clickable="true"
			android:padding="8dp"
			android:clipToPadding="false">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:padding="8dp"
				android:clipToPadding="false">

				<Button
					android:id="@+id/button_start_quiz"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Start quiz"
					android:textSize="20dp"
					android:textColor="@color/white"
					android:layout_gravity="center"
					android:padding="8dp"
				/>

				<TextView
					android:layout_gravity="left|top"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Stats"
					android:gravity="left|top"
					android:padding="8dp"
					android:textStyle="bold"
				/>

				<TextView
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Vocabularies reviewed:"
					android:gravity="left"
					android:paddingLeft="8dp"
					android:paddingBottom="16dp"/>
				
				<com.taraxippus.vocab.view.GraphView
					android:id="@+id/graph"
					android:layout_width="fill_parent"
					android:layout_height="125dp"
					/>
				
				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="horizontal"
					android:weightSum="1">
					
					<TextView
						android:id="@+id/text_date"
						android:layout_gravity="left"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Date1"
						android:gravity="left"
						android:paddingLeft="8dp"
						/>
					
					<FrameLayout
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:layout_weight="1"/>
					
					<TextView
						android:layout_gravity="right"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Today"
						android:gravity="right"
						android:paddingRight="8dp"/>
					
				</LinearLayout>
			
				<TextView
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Vocabularies learned:"
					android:gravity="left"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"/>

				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="horizontal">

					<ProgressBar
						android:id="@+id/learned_progress"
						style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
						android:layout_width="200dp"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:progress="50"
						android:max="100"
						android:layout_gravity="center"
						android:layout_weight="3"
					/>

					<TextView
						android:id="@+id/learned_progress_number"
						android:layout_gravity="right|center"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="50 / 100"
						android:gravity="right|center"
						android:padding="8dp"
						android:layout_weight="2"/>

				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="?android:attr/listDivider"/>

				<TextView
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Total success rate:"
					android:gravity="left"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"/>

				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="horizontal">

					<ProgressBar
						android:id="@+id/total_progress"
						style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
						android:layout_width="200dp"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:progress="50"
						android:max="100"
						android:layout_gravity="center"
						android:layout_weight="3"
					/>

					<TextView
						android:id="@+id/total_progress_number"
						android:layout_gravity="right|center"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="50 / 100"
						android:gravity="right|center"
						android:padding="8dp"
						android:layout_weight="2"/>

				</LinearLayout>
			
			</LinearLayout>

		</android.support.v7.widget.CardView>
		
		<android.support.v7.widget.CardView
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			android:id="@+id/card_start_quiz"
			android:layout_gravity="top"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			card_view:cardCornerRadius="4dp"
			card_view:cardElevation="4dp"
			card_view:cardUseCompatPadding="true"
			android:clickable="true"
			android:padding="8dp">

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:padding="8dp">

				<TextView
					android:layout_gravity="left|top"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Settings"
					android:gravity="left|top"
					android:padding="8dp"
					android:textStyle="bold"
				/>

				<TextView
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Grammar types"
					android:gravity="left"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"/>

				<LinearLayout
					android:id="@+id/layout_grammar_type"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				</LinearLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="?android:attr/listDivider"/>

				<TextView
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Vocabulary types"
					android:gravity="left"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"/>

				<LinearLayout 
					android:id="@+id/layout_vocabulary_type"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">


				</LinearLayout>

			</LinearLayout>

		</android.support.v7.widget.CardView>

	</LinearLayout>
</ScrollView>
