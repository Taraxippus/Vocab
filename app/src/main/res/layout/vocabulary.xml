<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
	
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:scrollbars="vertical">
    
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_kanji"
		android:layout_gravity="top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="4dp"
		card_view:cardElevation="4dp"
		card_view:cardUseCompatPadding="true"
		android:padding="8dp">
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:padding="8dp">

			<TextView
				android:id="@+id/kanji_text"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Kanji"
				android:textSize="75dp"
				android:shadowColor="#000000"
				android:shadowDx="2"
				android:shadowDy="2"
				android:shadowRadius="16"
				android:gravity="center"/>

			<TextView
				android:id="@+id/reading_text"
				android:layout_gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Reading"
				android:textSize="20dp"
				android:gravity="center"/>
			
			<FrameLayout
				android:layout_width="fill_parent"
				android:layout_height="15dp"/>

			<TextView
				android:id="@+id/meaning_text"
				android:layout_gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Meaning"
				android:textSize="20dp"
				android:gravity="center"/>
			
			<TextView
				android:id="@+id/type"
				android:layout_gravity="right|bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:gravity="right|bottom"
				android:paddingTop="8dp"
				android:paddingRight="8dp"/>
				
		</LinearLayout>
		
	</android.support.v7.widget.CardView>
	
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_same_reading"
		android:layout_gravity="top|center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="4dp"
		card_view:cardElevation="4dp"
		card_view:cardUseCompatPadding="false"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground"
		android:padding="8dp">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp">

			<TextView
				android:layout_gravity="left|top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Same reading"
				android:gravity="left|top"
				android:padding="8dp"
				android:paddingLeft="16dp"
				android:textStyle="bold"
			/>
			
			<android.support.v7.widget.RecyclerView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/same_reading_recycler_view"
				android:layout_width="fill_parent"
				android:layout_height="100dp" 
				android:foreground="?attr/selectableItemBackground"/>
			
		</LinearLayout>

	</android.support.v7.widget.CardView>
	
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_same_meaning"
		android:layout_gravity="top|center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="4dp"
		card_view:cardElevation="4dp"
		card_view:cardUseCompatPadding="false"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground"
		android:padding="8dp">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp">

			<TextView
				android:layout_gravity="left|top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Same meaning"
				android:gravity="left|top"
				android:padding="8dp"
				android:paddingLeft="16dp"
				android:textStyle="bold"
			/>

			<android.support.v7.widget.RecyclerView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/same_meaning_recycler_view"
				android:layout_width="fill_parent"
				android:layout_height="100dp"
				android:foreground="?attr/selectableItemBackground"/>

		</LinearLayout>

	</android.support.v7.widget.CardView>
	
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_stats"
		android:layout_gravity="top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="4dp"
		card_view:cardElevation="4dp"
		card_view:cardUseCompatPadding="true"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground"
		android:padding="8dp">
	
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="8dp">
			
			<TextView
				android:layout_gravity="left|top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Stats"
				android:gravity="left|top"
				android:padding="8dp"
				android:textStyle="bold"
				/>
			
			<TextView
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Success rate for entering kanji:"
				android:gravity="left"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"/>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				
				<ProgressBar
					android:id="@+id/kanji_progress"
					style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:progress="50"
					android:max="100"
					android:layout_gravity="center"
					android:layout_weight="3"
				/>
			
				<TextView
					android:id="@+id/kanji_progress_number"
					android:layout_gravity="right|center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="50 / 100"
					android:gravity="right|center"
					android:padding="8dp"
					android:layout_weight="2"/>
				
			</LinearLayout>
		
			<LinearLayout
				android:id="@+id/layout_reading"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical">
				
				<TextView
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Success rate for entering reading:"
					android:gravity="left"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"/>

				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="horizontal">

					<ProgressBar
						android:id="@+id/reading_progress"
						style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
						android:layout_width="200dp"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:progress="50"
						android:max="100"
						android:layout_gravity="center"
						android:layout_weight="3"
					/>

					<TextView
						android:id="@+id/reading_progress_number"
						android:layout_gravity="right|center"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="50 / 100"
						android:gravity="right|center"
						android:padding="8dp"
						android:layout_weight="2"/>

				</LinearLayout>
			
			</LinearLayout>
			
			<TextView
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Success rate for entering meaning:"
				android:gravity="left"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"/>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
				android:paddingBottom="8dp">

				<ProgressBar
					android:id="@+id/meaning_progress"
					style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
					android:layout_width="200dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:progress="50"
					android:max="100"
					android:layout_gravity="center"
					android:layout_weight="3"
				/>

				<TextView
					android:id="@+id/meaning_progress_number"
					android:layout_gravity="right|center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="50 / 100"
					android:gravity="right|center"
					android:padding="8dp"
					android:layout_weight="2"/>

			</LinearLayout>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="?android:attr/listDivider"/>
			
			<TextView
				android:id="@+id/kanji_streak"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Kanji streak: 0"
				android:gravity="left"
				android:paddingTop="8dp"/>
			
			<TextView
				android:id="@+id/reading_streak"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Reading streak: 0"
				android:gravity="left"/>
			
			<TextView
				android:id="@+id/meaning_streak"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Meaning streak: 0"
				android:gravity="left"
				android:paddingBottom="8dp"/>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="?android:attr/listDivider"/>
			
			<LinearLayout
				android:id="@+id/reading_meaning_usage"
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:orientation="vertical"
				android:paddingTop="8dp">
				
				<TextView
					android:id="@+id/reading_meaning_usage_text"
					android:layout_gravity="left"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Meaning entered:"
					android:gravity="left"/>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="?android:attr/listDivider"/>
			
			</LinearLayout>
			
			<TextView
				android:id="@+id/category"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Category: 0"
				android:gravity="left"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"/>
			
			
			<TextView
				android:id="@+id/next_review"
				android:layout_gravity="right|bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Next Review: Now"
				android:gravity="right|bottom"
				android:paddingRight="8dp"/>
			
			<TextView
				android:id="@+id/last_checked"
				android:layout_gravity="right|bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Last Checked: Never"
				android:gravity="right|bottom"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"/>
			
			<TextView
				android:id="@+id/added"
				android:layout_gravity="right|bottom"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Added: Never"
				android:gravity="right|bottom"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"/>
			
		</LinearLayout>
		
	</android.support.v7.widget.CardView>
	
</LinearLayout>
</ScrollView>
