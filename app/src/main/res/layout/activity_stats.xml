<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<android.support.v7.widget.CardView
			android:id="@+id/card_reviews"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			card_view:cardCornerRadius="0dp"
			card_view:cardElevation="2dp" >

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp" >

				<TextView
					android:id="@+id/text_title_reviews"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					android:text="Reviews"
					android:padding="8dp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_next_review"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_title_reviews"
					android:paddingTop="8dp"
					android:paddingLeft="8dp"
					android:text="Upcoming reviews:" />

				<TextView
					android:id="@+id/text_next_review_category"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_next_review"
					android:paddingLeft="16dp"
					android:paddingTop="8dp"
					android:text="Now\nIn the next hour\nIn the next day" />

				<TextView
					android:id="@+id/text_next_review_values"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_next_review"
					android:paddingRight="16dp"
					android:paddingTop="8dp"
					android:gravity="center"
					android:textStyle="bold" />

				<com.taraxippus.vocab.view.LineGraphView
					android:id="@+id/line_graph_review"
					android:layout_width="match_parent"
					android:layout_height="125dp"
					android:layout_below="@id/text_next_review_category"
					android:layout_marginTop="16dp"/>

				<TextView
					android:id="@+id/text_now"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/line_graph_review"
					android:text="Now"
					android:paddingLeft="8dp" />

				<TextView
					android:id="@+id/text_than"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/line_graph_review"
					android:text="In 24 hours"
					android:paddingRight="8dp" />

				<com.taraxippus.vocab.view.LineGraphView
					android:id="@+id/line_graph_review2"
					android:layout_width="match_parent"
					android:layout_height="125dp"
					android:layout_below="@id/text_now"
					android:layout_marginTop="16dp"/>

				<TextView
					android:id="@+id/text_now2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/line_graph_review2"
					android:text="Tomorrow"
					android:paddingLeft="8dp" />

				<TextView
					android:id="@+id/text_than2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/line_graph_review2"
					android:text="In 7 days"
					android:paddingRight="8dp" />
				
				<TextView
					android:id="@+id/text_graph_reviewed"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_now2"
					android:text="Reviews in the last 30 days:"
					android:paddingLeft="8dp"
					android:paddingTop="16dp"
					android:paddingBottom="16dp"/>

				<com.taraxippus.vocab.view.GraphView
					android:id="@+id/graph_reviewed"
					android:layout_width="match_parent"
					android:layout_height="125dp" 
					android:layout_below="@id/text_graph_reviewed" />

				<TextView
					android:id="@+id/text_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/graph_reviewed"
					android:paddingLeft="8dp" />

				<TextView
					android:id="@+id/text_today"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/graph_reviewed"
					android:text="Today"
					android:paddingRight="8dp" />

			</RelativeLayout>
		</android.support.v7.widget.CardView>


		<android.support.v7.widget.CardView
			android:id="@+id/card_learned"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			android:layout_marginTop="4dp"
			card_view:cardCornerRadius="0dp"
			card_view:cardElevation="2dp" >

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp" >

				<TextView
					android:id="@+id/text_title_learned"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					android:text="Vocabularies / Kanji learned"
					android:padding="8dp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_learned_category"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_title_learned"
					android:paddingLeft="16dp"
					android:paddingTop="8dp"
					android:text="Today\nThis week" />

				<TextView
					android:id="@+id/text_learned_values"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_title_learned"
					android:paddingRight="16dp"
					android:paddingTop="8dp"
					android:gravity="center"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_graph_learned"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_learned_category"
					android:text="Learned in the last 30 days:"
					android:paddingLeft="8dp"
					android:paddingTop="16dp"
					android:paddingBottom="16dp"/>

				<com.taraxippus.vocab.view.GraphView
					android:id="@+id/graph_learned"
					android:layout_width="match_parent"
					android:layout_height="125dp" 
					android:layout_below="@id/text_graph_learned" />

				<TextView
					android:id="@+id/text_date2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/graph_learned"
					android:paddingLeft="8dp" />

				<TextView
					android:id="@+id/text_today2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/graph_learned"
					android:text="Today"
					android:paddingRight="8dp" />

			</RelativeLayout>
		</android.support.v7.widget.CardView>
		
		<android.support.v7.widget.CardView
			android:id="@+id/card_stats"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			card_view:cardCornerRadius="0dp"
			card_view:cardElevation="2dp" >

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp" >

				<TextView
					android:id="@+id/text_title_stats"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					android:text="Stats"
					android:padding="8dp"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_learned_progress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_title_stats"
					android:text="Vocabularies learned:"
					android:paddingLeft="8dp"
					android:paddingTop="8dp" />

				<TextView
					android:id="@+id/text_progress_learned"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_learned_progress"
					android:padding="8dp" 
					android:minWidth="64dp"
					android:layout_gravity="center" />

				<ProgressBar
					android:id="@+id/progress_learned"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_learned_progress"
					android:layout_toLeftOf="@id/text_progress_learned"
					android:padding="8dp" />

				<TextView
					android:id="@+id/text_learned_kanji_progress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_progress_learned"
					android:text="Kanji learned:"
					android:paddingLeft="8dp"
					android:paddingTop="8dp" />

				<TextView
					android:id="@+id/text_progress_learned_kanji"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_alignLeft="@id/text_progress_learned"
					android:layout_below="@id/text_learned_kanji_progress"
					android:padding="8dp"
					android:gravity="center"/>

				<ProgressBar
					android:id="@+id/progress_learned_kanji"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_learned_kanji_progress"
					android:layout_toLeftOf="@id/text_progress_learned_kanji"
					android:padding="8dp" />

				<TextView
					android:id="@+id/text_total_progress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_progress_learned_kanji"
					android:text="Total success rate in quiz:"
					android:paddingLeft="8dp"
					android:paddingTop="16dp"/>

				<TextView
					android:id="@+id/text_progress_total"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_total_progress"
					android:padding="8dp" />

				<ProgressBar
					android:id="@+id/progress_total"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_total_progress"
					android:layout_toLeftOf="@id/text_progress_total"
					android:padding="8dp" />

				<TextView
					android:id="@+id/text_kanji_progress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_progress_total"
					android:text="Success rate for entering kanji:"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"/>

				<TextView
					android:id="@+id/text_progress_kanji"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignLeft="@id/text_progress_total"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_kanji_progress"
					android:padding="8dp"
					android:gravity="center" />

				<ProgressBar
					android:id="@+id/progress_kanji"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_kanji_progress"
					android:layout_toLeftOf="@id/text_progress_kanji"
					android:layout_alignRight="@id/progress_total"
					android:padding="8dp" />

				<TextView
					android:id="@+id/text_reading_progress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_progress_kanji"
					android:text="Success rate for entering reading:"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"/>

				<TextView
					android:id="@+id/text_progress_reading"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignLeft="@id/text_progress_total"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_reading_progress"
					android:padding="8dp"
					android:gravity="center" />

				<ProgressBar
					android:id="@+id/progress_reading"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_reading_progress"
					android:layout_toLeftOf="@id/text_progress_reading"
					android:layout_alignRight="@id/progress_total"
					android:padding="8dp" />

				<TextView
					android:id="@+id/text_meaning_progress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_progress_reading"
					android:text="Success rate for entering meaning:"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"/>

				<TextView
					android:id="@+id/text_progress_meaning"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignLeft="@id/text_progress_total"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_meaning_progress"
					android:padding="8dp" 
					android:gravity="center" />

				<ProgressBar
					android:id="@+id/progress_meaning"
					style="?android:attr/progressBarStyleHorizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_meaning_progress"
					android:layout_toLeftOf="@id/text_progress_meaning"
					android:layout_alignRight="@id/progress_total"
					android:padding="8dp" />

				<TextView
					android:id="@+id/text_review_stats"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/progress_meaning"
					android:paddingTop="16dp"
					android:paddingLeft="8dp"
					android:text="Reviews per day:" />

				<TextView
					android:id="@+id/text_review_stats_category"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_review_stats"
					android:paddingLeft="16dp"
					android:paddingTop="8dp"
					android:text="Average\nRecord" />

				<TextView
					android:id="@+id/text_review_stats_values"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_review_stats"
					android:paddingRight="16dp"
					android:paddingTop="8dp"
					android:gravity="center"
					android:textStyle="bold" />
				
				<TextView
					android:id="@+id/text_review_time_stats"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_review_stats_category"
					android:paddingTop="16dp"
					android:paddingLeft="8dp"
					android:text="Time in quiz per day:" />

				<TextView
					android:id="@+id/text_review_time_stats_category"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_review_time_stats"
					android:paddingLeft="16dp"
					android:paddingTop="8dp"
					android:text="Today\nAverage\nRecord" />

				<TextView
					android:id="@+id/text_review_time_stats_values"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_review_time_stats"
					android:paddingRight="16dp"
					android:paddingTop="8dp"
					android:gravity="center"
					android:textStyle="bold" />
				
				<TextView
					android:id="@+id/text_learned_stats"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_review_time_stats_category"
					android:paddingTop="16dp"
					android:paddingLeft="8dp"
					android:text="Learned per day:" />

				<TextView
					android:id="@+id/text_learned_stats_category"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_learned_stats"
					android:paddingLeft="16dp"
					android:paddingTop="8dp"
					android:text="Average\nRecord" />

				<TextView
					android:id="@+id/text_learned_stats_values"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_learned_stats"
					android:paddingRight="16dp"
					android:paddingTop="8dp"
					android:gravity="center"
					android:textStyle="bold" />
				
				<TextView
					android:id="@+id/text_fun_stats"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_learned_stats_category"
					android:paddingTop="16dp"
					android:paddingLeft="8dp"
					android:text="Fun facts:" />

				<TextView
					android:id="@+id/text_fun_stats_category"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_below="@id/text_fun_stats"
					android:paddingLeft="16dp"
					android:paddingTop="8dp"
					android:text="Unique Kanji\nVocabularies in Kana\nMost Synonyms\nMost Homophones\nMost Reviews per Vocabulary" />

				<TextView
					android:id="@+id/text_fun_stats_values"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_below="@id/text_fun_stats"
					android:paddingRight="16dp"
					android:paddingTop="8dp"
					android:gravity="center"
					android:textStyle="bold" />
				
			</RelativeLayout>
		</android.support.v7.widget.CardView>
		
	</LinearLayout>
</android.support.v4.widget.NestedScrollView>
